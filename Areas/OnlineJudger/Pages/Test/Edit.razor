@page "/online-judger/tests/edit/{id}"

@using TeachingSystem.Areas.OnlineJudger.Shared

<div class="mat-layout-grid">
    <div class="mat-layout-grid-inner">
        <div class="mat-layout-grid-cell"></div>
        <div class="mat-layout-grid-cell">
            <h1>Edit Test</h1>
            <TestInfo id="@Id" admin="true" OnSave="OnSave"></TestInfo>
        </div>
        <div class="mat-layout-grid-cell"></div>
    </div>
</div>
 
@code {
    [Parameter]
    public string Id {get;set;}
    void OnSave() 
    {
        NavigationManager.NavigateTo("/online-judger/tests");
    }
}