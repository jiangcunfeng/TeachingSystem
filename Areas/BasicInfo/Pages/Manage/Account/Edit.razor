@page "/BasicInfo/Manage/Account/Edit/{id}"
@using TeachingSystem.Areas.BasicInfo.Shared
<div class="mat-layout-grid">
    <div class="mat-layout-grid-inner">
        <div class="mat-layout-grid-cell"></div>
        <div class="mat-layout-grid-cell">
            <h1>编辑用户</h1>
            <UserInfo id="@Id" admin="true" OnSave="OnSave"></UserInfo>
        </div>
        <div class="mat-layout-grid-cell"></div>
        
    </div>
</div>
 

@code {
    [Parameter]
    public string Id{get;set;}
    void OnSave() {
        NavigationManager.NavigateTo("/BasicInfo/Manage/Account");
    }
}